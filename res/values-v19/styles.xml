<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light"></style>
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:disabledAlpha">0.5</item>
        <item name="android:windowContentOverlay">@null</item>       	
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:homeAsUpIndicator">@drawable/arrowleft</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>  
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.DeviceDefault.Light.ActionBar">
        <item name="android:background">@color/BASE</item>
        <item name="android:backgroundSplit">@color/BASE</item>        
        <item name="android:titleTextStyle">@style/MyActionBar.TitleTextStyle</item>        
        <item name="android:subtitleTextStyle">@style/MyActionBar.subtitleTextStyle</item>      
    </style>

    <style name="MyActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/BaseOrange</item>
    </style>

    <style name="MyActionBar.subtitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
    </style>
    

    <style name="LoadingDialog" parent="android:style/Theme.Translucent">
        <item name="android:disabledAlpha">0.5</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationDialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@null</item>
        <item name="android:textColor">@color/BaseGray</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="AnimationDialog" parent="android:style/Theme.Translucent">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackground">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="MDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:disabledAlpha">0.5</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationDialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@color/BASE</item>
        <item name="android:colorBackground">@null</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="MDialogNoTitle" parent="android:style/Theme.Holo.Dialog">
        <item name="android:disabledAlpha">0.5</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationDialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@null</item>
        <item name="android:textColor">#000000</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    

    <style name="DialogButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style  name="MEditText" parent="@android:style/Widget.EditText" >
        <item name="android:background">#ffffff</item>      
        <item name="android:textColor">@color/BaseGray</item>
        <item name="android:textSize">16sp</item>  
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>
</resources>
